  "author": "Toru Kobayashi <koba0004@gmail.com>",
  "devDependencies": {
    "@cybozu/eslint-config": "^7.1.0",
    "@types/node": "^12.7.12",
    "eslint": "^6.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "typescript": "^3.6.4"
  }
}
